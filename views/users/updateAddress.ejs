<% layout("/layouts/boilerplate") -%>

    <div class="form-container">
        <h2>Update Address</h2>
        <form action="/user-address/edit" method="POST" class="form">
            <div class="form-group">
                <label for="street">Street:</label>
                <input type="text" id="street" name="street" placeholder="Enter your street address" minlength="3"
                    maxlength="100" value="<%= address && address.address ? address.address.street : '' %>" required>

                <label for="city">City:</label>
                <input type="text" id="city" name="city" placeholder="Enter your city" minlength="3" maxlength="50"
                    value="<%= address && address.address ? address.address.city : '' %>" required>

                <label for="landmark">Landmark:</label>
                <input type="text" id="landmark" name="landmark" placeholder="Enter a landmark" minlength="3"
                    maxlength="50" value="<%= address && address.address ? address.address.landmark : '' %>">

                <label for="state">State:</label>
                <input type="text" id="state" name="state" placeholder="Enter your state" minlength="3" maxlength="50"
                    value="<%= address && address.address ? address.address.state : '' %>" required>

                <label for="country">Country:</label>
                <input type="text" id="country" name="country" placeholder="Enter your country" minlength="3"
                    maxlength="50" value="India" required>

                <label for="zip">PIN CODE:</label>
                <input type="text" id="zip" name="zip" placeholder="Enter your PIN code" minlength="6" maxlength="6"
                    value="<%= address && address.address ? address.address.pincode : '' %>" required>
            </div>
            <button type="submit" class="btn"> <i class="fa-solid fa-address-card"></i> Update Address</button>
        </form>
    </div>

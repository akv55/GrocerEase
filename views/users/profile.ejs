<% layout("/layouts/boilerplate") -%>
    <div class="forms-container">

        <div class="profile-header">
            <form action="/profile-edit" method="GET">
                <button class="edit-btn"><i class="fas fa-edit"></i> Edit Profile</button>
            </form>
        </div>
        <div class="profile-image">
            <img src="<%= user && user.profileImage.url ? user.profileImage.url : 'https://cdn-icons-png.flaticon.com/512/147/147144.png' %>"
                alt="Profile Picture">

        </div>
        <h2 class="profile-name">
            <%= user.name.toUpperCase() %>
        </h2>
        <div class="info">
            <p><i class="fas fa-envelope"></i>
                <%= user.email %>
            </p>
            <p><i class="fas fa-phone"></i>
                <%= user.phone %>
            </p>
            <p><i class="fas fa-shield-alt"></i>
                Role: <span class="role-badge role-<%= user.role %>">
                    <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                </span>
            </p>
            <p><i class="fas fa-calendar-alt"></i> Joined <%= user.createdAt.toLocaleDateString() %>
            </p>

        </div>
    </div>

    <style>
        .forms-container {
            max-width: 400px;
            margin: 30px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding-bottom: 20px;
        }

        .profile-header {
            background: linear-gradient(135deg, #28a745, #76ee90);
            height: 120px;
            position: relative;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .edit-btn {
            margin-top: 20px;
            margin-left: 250px;
            padding: 8px;
            border: none;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.8);
            cursor: pointer;
            font-size: 13px;
        }

        .profile-image {
            position: relative;
            margin-top: -50px;
        }

        .profile-image img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 4px solid #fff;
        }

        .camera-btn {
            position: absolute;
            bottom: 5px;
            right: 40%;
            background: #33d559;
            border: none;
            border-radius: 50%;
            color: #fff;
            padding: 8px;
            cursor: pointer;
        }

        .profile-name {
            font-size: 20px;
            font-weight: bold;
            margin: 10px 0 5px;
            color: #666;
        }

        .info {
            text-align: left;
            padding: 0 20px;
            font-size: 14px;
            color: #555;
        }

        .info p {
            padding: 5px;
        }

        .info i {
            color: #28a745;
            margin-right: 8px;
        }

        .role-badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: bold;
            text-transform: uppercase;
        }

        .role-user {
            background-color: #e3f2fd;
            color: #1976d2;
        }

        .role-admin {
            background-color: #fff3e0;
            color: #f57c00;
        }

        @media (max-width: 500px) {
            .forms-container {
                width: 90%;
                margin: 20px auto;
            }

            .edit-btn {
                margin-left: 200px;
                font-size: 12px;
            }
        }
    </style>
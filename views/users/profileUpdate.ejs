<% layout("/layouts/boilerplate") -%>
    <div class="form-container">
        <h2>User Profile</h2>
        <form action="/profile/edit" method="POST" enctype="multipart/form-data" class="form">
            <div class="form-group">
                <label for="profileImage">Change Profile Image</label>
                <input type="file" id="profileImage" name="user[profileImage]" accept=".jpg, .jpeg, .png, .gif">
                <label for="name">Name:</label>
                <input type="text" id="name" name="user[name]" value="<%= user.name %>" required><br>
                <label for="email">Email:</label>
                <input type="email" id="email" name="user[email]" value="<%= user.email %>" disabled required><br>
                <label for="phone">Phone:</label>
                <input type="text" id="phone" name="user[phone]" value="<%= user.phone %>" pattern="[0-9]{10}"
                    maxlength="10" minlength="10" required><br>
                <button type="submit" class="btn">Update Profile</button>
        </form>
    </div>
<% layout("/layouts/boilerplate") -%>
    <div class="order-details-container">
        <div class="order-header-section">
            <div class="header-content">
                <h1>Order Details</h1>
                <div class="orderId-and-date">
                    <span class="order-id"><strong>Order ID:</strong>
                        <%= order.orderId %>
                    </span>
                    <span class="order-date"><strong>Placed on:</strong>
                        <%= order.createdAt.toLocaleDateString() %>
                    </span>
                </div>
            </div>
            <div class="<% if (order.status) { %> status-<%= order.status.toLowerCase() %> <% } %>">
                <span>
                    <%= order.status.toUpperCase() %>
                </span>
            </div>
        </div>


        <div class="order-content">
            <!-- Order Items Section -->
            <div class="order-items-section">
                <h2>Items Ordered</h2>
                <div class="items-list">
                    <% order.items.forEach(function(item) { %>
                        <div class="order-item-card">
                            <div class="item-image">
                                <img src="<%= item.product && item.product.image && item.product.image.url ? item.product.image.url : '/assets/file.svg' %>"
                                    alt="<%= item.name %>" onerror="this.src='/assets/file.svg'">
                            </div>
                            <div class="order-item-details">
                                <h4>
                                    <%= item.name %>
                                </h4>
                                <span>Qty: <%= item.quantity %></span>
                                <div class="item-info">
                                    <span class="quantity">
                                        <%= item.product && item.product.weight ? item.product.weight.value : 'N/A' %>
                                            <%= item.product && item.product.weight ? item.product.weight.unit : '' %>
                                    </span>
                                    <span class="unit-price"> ₹<%= item.price.toFixed(2) %></span>
                                </div>
                            </div>

                            <div class="item-total">
                                <strong>₹<%= (item.price * item.quantity).toFixed(2) %></strong>
                            </div>
                            <% if (order.status === 'Delivered') { %>
                                <div class="item-actions">
                                    <a href="/review/<%= item.product._id %>" class="btn-review">Write Review</a>
                                </div>
                            <% } %>
                        </div>

                        <% }); %>
                </div>
            </div>

            <!-- Order Summary Section -->
            <div class="order-summary-section">
                <div class="summary-card">
                    <h2>Order Summary</h2>
                    <div class="summary-row">
                        <span>Subtotal:</span>
                        <span>₹<%= order.totalAmount.toFixed(2) %></span>
                    </div>
                    <div class="summary-row">
                        <span>Delivery Charges:</span>
                        <span>₹50.00</span>
                    </div>
                    <div class="summary-row total">
                        <span><strong>Total Amount:</strong></span>
                        <span><strong>₹<%= (order.totalAmount + 50).toFixed(2) %></strong></span>
                    </div>
                </div>

                <!-- Payment Information -->
                <div class="payment-info-card">
                    <h3>Payment Information</h3>
                    <div class="order-payment-details">
                        <div class="payment-row">
                            <span>Payment Method:</span>
                            <span>
                                <%= order.paymentMethod %>
                            </span>
                        </div>
                        <div class="payment-row">
                            <span>Payment Status:</span>
                            <span class="payment-status <%= order.paymentStatus.toLowerCase() %>">
                                <%= order.paymentStatus %>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Delivery Information -->
                <% if (order.deliveryAddress) { %>
                    <div class="delivery-info-card">
                        <h3>Delivery Details</h3>
                        <div class="address-details">
                            <% const a=order.deliveryAddress; %>
                                <% if (typeof a==='object' && a.address && a.address.street) { %>
                                    <div class="Delivery-address">

                                        <p><i class="fa-solid fa-house-user"></i>
                                            <%= a.address.street %>
                                                <%= a.address.city %>
                                                    <%= a.address.landmark %>
                                                        <%= a.address.state %>
                                                            <%= a.address.country %>
                                                                <%= a.address.pincode %>
                                        </p>
                                        <hr>
                                        <% if (order.user) { %>
                                            <p><i class="fa-solid fa-user"></i>
                                                <%= order.user.name || '' %>
                                            </p>
                                            <p><i class="fa-solid fa-phone"></i>
                                                <%= order.user.phone || '' %>
                                            </p>
                                            <% } %>
                                    </div>




                                    <% } %>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
        <div class="orders-actions">
            <button onclick="window.history.back();" class="btn-back"><i class="fas fa-arrow-left"></i> BACK TO
                ORDERS</button>
            <button class="btn-cancel"><i class="fas fa-times"></i> CANCEL ORDER</button>
            <button class="btn-track"><i class="fas fa-truck"></i> TRACK ORDER</button>
        </div>
    </div>
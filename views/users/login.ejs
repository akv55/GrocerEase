<% layout("/layouts/boilerplate") -%>

    <div class="form-container">
        <h2 class="login-content">Login</h2>
        <form action="/login" method="POST" class="form">
            <label for="username">Email/Username :</label>
            <input name="username" type="text" id="username" placeholder="Enter your email or username" required />
            <label for="password">Password :</label>
            <div class="password-container">
                <input name="password" type="password" id="password" placeholder="Enter your password" required />
                <i class="fa-solid fa-eye" id="togglePassword"></i>
            </div>
            <p class="forgot-password" style="text-align: end !important;"><a href="/forgot-password">Forgot
                    Password?</a></p>
            <br>
            <button class="btn">Login</button>
        </form>
        <hr class="form-divider">
        <div class="form-footer">
            <p>Don't have an account? <a href="/signup">Sign Up</a></p>
        </div>
    </div>
    <script>
        const passwordInput = document.getElementById("password");
        const togglePassword = document.getElementById("togglePassword");
        togglePassword.addEventListener("click", () => {
            const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
            passwordInput.setAttribute("type", type);
            togglePassword.classList.toggle("fa-eye");
            togglePassword.classList.toggle("fa-eye-slash");
        });
    </script>
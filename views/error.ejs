<% if (!(user && user.role==="admin" )) { -%>
    <% layout("/layouts/boilerplate") -%>
        <% } else { -%>
            <% layout("/layouts/adminboilerplate") -%>
                <% } -%>
                    <div class="error-container">
                        <% if (err.statusCode===404) { %>
                            <i class="fa-solid fa-magnifying-glass error-icon"></i>
                            <h1 class="error-title">
                                <%= err.message %>
                            </h1>
                            <h3 class="error-status">Status Code: <%= err.statusCode %>
                            </h3>
                            <p class="error-message">Sorry, the page you're looking for doesn't exist.</p>
                            <p class="error-details">The requested URL was not found on this server.</p>
                            <% } else if (err.statusCode===500) { %>
                                <i class="fas fa-server error-icon"></i>
                                <h1 class="error-title">
                                    <%= err.message %>
                                </h1>
                                <h3 class="error-status">Status Code: <%= err.statusCode %>
                                </h3>
                                <p class="error-message">Oops! Something went wrong on our end.</p>
                                <p class="error-details">Please try again later or contact support.</p>
                                <% } else { %>
                                    <i class="fas fa-exclamation-circle error-icon"></i>
                                    <h1 class="error-title">
                                        <%= err.message %>
                                    </h1>
                                    <h3 class="error-status">Status Code: <%= err.statusCode %>
                                    </h3>
                                    <p class="error-details">An unexpected error occurred.</p>
                                    <% } %>
                                        <div class="error-actions">
                                            <% if (!(user && user.role==="admin" )) { -%>
                                                <a href="/" class="btn btn-primary">
                                                    <i class="fas fa-home"></i> Go to Home
                                                </a>
                                                <% } else { -%>
                                                    <a href="/admin/dashboard" class="btn btn-primary">
                                                        <i class="fas fa-home"></i> Go to Home
                                                    </a>
                                                <% } -%>

                                                            <button onclick="history.back()" class="btn btn-secondary">
                                                                <i class="fas fa-arrow-left"></i> Go Back
                                                            </button>
                                                            <button onclick="window.location.reload()"
                                                                class="btn btn-outline">
                                                                <i class="fas fa-sync-alt"></i> Try Again
                                                            </button>
                                        </div>
                    </div>

                    <style>
                        .error-container {
                            max-width: 500px;
                            margin: 50px auto;
                            padding: 40px 20px;
                            border-radius: 15px;
                            text-align: center;
                            background-color: #fff;
                            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
                            font-family: 'Arial', sans-serif;
                        }

                        .error-icon {
                            font-size: 4rem;
                            color: #dc3545;
                            margin-bottom: 20px;
                            display: block;
                        }

                        .error-title {
                            font-size: 2.5rem;
                            color: #343a40;
                            margin-bottom: 10px;
                        }

                        .error-message {
                            font-size: 1.2rem;
                            color: #6c757d;
                            margin-bottom: 10px;
                        }

                        .error-details {
                            font-size: 1rem;
                            color: #6c757d;
                            margin-bottom: 10px;
                        }

                        .error-status {
                            font-size: 1.2rem;
                            color: #6c757d;
                            margin-bottom: 20px;
                        }

                        .error-actions {
                            display: flex;
                            justify-content: center;
                            gap: 2rem;
                            margin-top: 20px;
                        }

                        .error-actions a,
                        .error-actions button {
                            background-color: #28a745;
                            padding: 5px 10px;
                            font-size: 15px;
                            border-radius: 5px;
                            text-decoration: none;
                            cursor: pointer;
                            border: 1px solid #28a745;
                            color: #fff;
                            transition: all 0.3s ease;
                        }

                        .error-actions a:hover,
                        .error-actions button:hover {
                            background-color: #218838;
                            border-color: #1e7e34;
                            transform: translateY(-2px);
                        }
                    </style>
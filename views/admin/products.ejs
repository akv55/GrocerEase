<% layout("/layouts/adminboilerplate") -%>
    <div class="product">
        <h1>Product List</h1>
        <div class="user-controls">
            <input type="text" id="searchInput" placeholder="Search...." oninput="resetPaginationAndRender()" />

            <select id="roleFilter" onchange="resetPaginationAndRender()">
                <option value="">Category</option>
                <option value="fruits">Fruits</option>
                <option value="vegetables">Vegetables</option>
                <option value="dairy">Dairy</option>
                <option value="meat">Meat</option>
                <option value="bakery">Bakery</option>
                <option value="beverages">Beverages</option>
            </select>

            <select id="limitSelect" onchange="resetPaginationAndRender()">
                <option value="10" selected>10</option>
                <option value="20">20</option>
                <option value="30">30</option>
            </select>

        </div>
        <table class="styled-table ">
            <thead>
                <tr class="table-header">
                    <th>Sr. No.</th>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Stock</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="table-body">
                <% for(let product of products){ %>
                    <tr class="table-body">
                        <td></td>
                        <td><img src="<%= product.image && product.image.url ? product.image.url : '/assets/img.jpg' %>"
                                class="listing-image" /></td>
                        <td>
                            <%= product.title %>
                        </td>
                        <td>
                            <%= product.price %>
                        </td>
                        <td>
                            <%= product.category %>
                        </td>
                        <td>
                            <%= product.stock ||"00" %>
                        </td>
                        <td>
                            <%= product.createdAt.toLocaleDateString() %>
                        </td>
                        <td>
                            <%= product.updatedAt.toLocaleDateString() %>
                        </td>
                        <td class="product-action">
                            <a href="/admin/products/edit/<%= product.id %>" class="product-edit-btn">Edit</a>
                            <form action="/admin/products/delete/<%= product.id %>" method="POST"
                                style="display:inline;">
                                <button type="submit" class="product-delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <br>
        <div class="pagination">
            <button>Prev</button>
            <span>Page</span>
            <button >Next</button>
        </div>
    </div>
    <script>
        const rows = document.querySelectorAll(".styled-table tbody tr");
        rows.forEach((row, index) => {
            row.cells[0].textContent = index + 1;
        });
    </script>